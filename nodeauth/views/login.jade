extends layout

block content
    h2.page-header Login
    p Please login below
    form(method='post', action='/users/login', entype='multipart/form-data')
        .form-group
            label Username
            input.form-control(name='username', type='text', placehoser='Enter username')
        .form-group
            label Password
            input.form-control(name='password', type='password', placehoser='Enter password')
        input.btn.btn-primary(type='submit', name='submit', value='Login')